<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_profile">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/temp_profile_image" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImage"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7dp"
        android:textSize="32sp"
        android:text="Name"/>

    <TextView
        android:id="@+id/profileAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profileName"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7dp"
        android:textSize="32sp"
        android:text="Age"/>

    <TextView
        android:id="@+id/profileDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileAge"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7dp"
        android:textSize="15sp"
        android:text="Description..."/>

    <Button
        android:id="@+id/profileMusicBtn"
        android:layout_below="@id/profileDescription"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:text="Play Profile Song"
        />

</RelativeLayout>